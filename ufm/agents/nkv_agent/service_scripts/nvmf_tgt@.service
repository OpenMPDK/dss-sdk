[Unit]
Description=Samsung Object Storage NVMF target operations with additional arguments
After=nvmf_tgt.service

[Service]
User=root
WorkingDirectory=/usr/nkv_agent
Environment="PYTHONPATH=/usr/nkv_agent:/usr/dragonfly/cm/:$PYTHONPATH"
Type=simple
ExecStart=/usr/nkv_agent/venv/bin/python kv-cli.py daemon --start_tgt %I
RemainAfterExit=true
ExecStop=/usr/nkv_agent/venv/bin/python kv-cli.py daemon --stop_tgt %I

[Install]
WantedBy=multi-user.target

